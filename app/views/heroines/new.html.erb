<% if @heroine.errors.any? %>
<%= @heroine.errors.full_messages %>
<% end %>

<h1>Create a new heroine!</h1>
<%= form_for @heroine do |f| %>
    <%= f.label :name, "Heroine's regular name" %>
    <%= f.text_field :name %><br>
    <%= f.label :super_name, "Heroine's superhero name" %>
    <%= f.text_field :super_name %><br>
    <%= f.label :power_id, "Heroine's superpower" %>
    <%= collection_select :heroine, :power_id, Power.all, :id, :name, prompt: true %>
    <%= f.submit %>
<% end %>